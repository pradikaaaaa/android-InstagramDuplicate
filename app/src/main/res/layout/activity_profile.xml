<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.uts3cyahya.ProfileActivity">

    <TextView
        android:id="@+id/tvUserProfile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="pradikaaaaa" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tvUserProfile"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:id="@+id/LayoutFollow"
        android:layout_below="@id/tvUserProfile"
        android:layout_toRightOf="@id/imgProfile"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:textAlignment="center"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0\npost" />

        <TextView
            android:id="@+id/textView11"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0\nfollowers" />

        <TextView
            android:id="@+id/textView12"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0\nfollowing" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonLogoutProfile"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@id/LayoutFollow"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/imgProfile"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:text="Logout"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvNamaProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/imgProfile"
        android:textStyle="bold"
        android:text="Yahya Dwi Pradika" />

    <TextView
        android:id="@+id/tvEmailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tvNamaProfile"
        android:text="Tempat Pencitraan\nAyam Jago Idamanku" />

    <GridView
        android:id="@+id/GridViewProfile"
        android:layout_below="@id/tvEmailProfile"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="10dp"
        android:verticalSpacing="5dp"
        android:gravity="center"
        android:numColumns="3"
        android:columnWidth="100dp"
        />

    <LinearLayout
        android:layout_below="@id/GridViewProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProfileHome"
            android:layout_marginTop="11dp"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ig_home" />

        <ImageView
            android:id="@+id/imgProfileExp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ig_search" />

        <ImageView
            android:id="@+id/imgProfilePost"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ig_add" />


        <ImageView
            android:id="@+id/imgProfileNotif"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ig_love" />

        <ImageView
            android:id="@+id/imgProfileProfile"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ig_profile" />

    </LinearLayout>

</RelativeLayout>
